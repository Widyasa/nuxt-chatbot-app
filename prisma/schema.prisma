generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Chats {
  id        String     @id @default(cuid())
  name      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  messages  Messages[]
}

model Messages {
  id        String   @id @default(cuid())
  question  String
  answer    String
  chat_id   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  chat      Chats    @relation(fields: [chat_id], references: [id])
}
